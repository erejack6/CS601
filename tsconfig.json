{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
